<div id="contactus">
    <div class="text" style="width:80%;display:inline; float: left; margin-top:50px; margin-left:50px;">
		<p class="header">聯絡我們</p>
	</div>
	<div class="wide text-center">
		<div class="center" style="width: 80%;">
			<form id="contact_form" data-toggle="validator">
					<div class="row">
						<div class="col-lg-2 col-md-4 col-sm-6">
							<label for="firs_tname">First Name</label>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-6">
							<input name="first_name" class="form-control" type="text" required/>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-2 col-md-4 col-sm-6">
							<label for="last_name">Last Name</label>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-6">
							<input name="last_name" class="form-control" type="text" required/>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-2 col-md-4 col-sm-6">
							<label for="email">Email</label>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-6">
							<input name="email" class="form-control" type="text" pattern="^[A-Za-z0-9._%-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$" required/>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-2 col-md-4 col-sm-6">
							<label for="subject">Subject</label>
						</div>
						<div class="col-lg-10 col-md-8 col-sm-6">
							<input name="subject" class="form-control" type="text" required/>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-2 col-md-4 col-sm-6">
							<label for="message">Message</label>
						</div>
						<div class="col-lg-10 col-md-8 col-sm-6">
							<textarea name="message" class="form-control" maxlength="1000" rows="6" required></textarea>
						</div>
					</div>
					<div class="row">
						<div colspan="2" style="text-align:center" class="col-lg-12 col-md-12 col-sm-12">
							<input id="contact_submit" class="mybutton" type="submit" value="Submit"/>
						</div> 
					</div>
				<div id="contact_error"></div>
			</form>
			<div id="contact_sent" style="display: none; height: 200px;">
				<p>Your email was sent. Thank you for contacting us.</p>
			</div>
		</div>
	</div>
</div>